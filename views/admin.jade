doctype html
html
    head
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='/css/style.css')
        link(rel='stylesheet prefetch', href='http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css')
        script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    body
        .login-form
            h3 Users
            .form-group
             ul
                 each user, i in userlist
                     li
                         form(id="disableuser", role="form", method="POST", action="/disableuser")
                             span.lablel #{user.username}
                             input(type="hidden", name='username', value="#{user.username}")
                             input(type="submit", value="Delete")            

            h3 Add User
            form(id="login", role="form", method="POST", action="/adduser")
                .form-group
                input.form-control(type="text", placeholder="Username", name="username")
                .form-group
                input.form-control(type="password", placeholder="Password", name="password")
                p.alert!=message
                input.log-btn(type="submit", value="Add User")
        script(type='text/javascript').                                                   
          var time =!{JSON.stringify(endDate)};
        script(src="js/index.js")
        script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
